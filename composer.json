{
    "name": "inerciacreativa/json",
    "description": "PHP class for working with JSON objects",
    "type": "library",
    "keywords": [
        "php",
        "json"
    ],
    "license": "MIT",
    "homepage": "https://inerciacreativa.com",
    "authors": [
        {
            "name": "Jose Cuesta",
            "email": "jose.cuesta@inerciacreativa.com",
            "homepage": "https://inerciacreativa.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/inerciacreativa/json/issues?state=open",
        "source": "https://github.com/inerciacreativa/json"
    },
    "require": {
        "php": ">=8.0",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "IC\\Json\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IC\\Json\\Tests\\": "tests/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "phpunit": "vendor/bin/phpunit -c phpunit.xml.dist",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon.dist"
    }
}
